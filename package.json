{
  "name": "hackathon-management-system",
  "version": "1.0.0",
  "description": "Hackathon Management & Voting System for SUNY New Paltz",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server/index.js",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "init-db": "node server/db/init.js"
  },
  "keywords": ["hackathon", "voting", "sso"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^9.2.2",
    "multer": "^1.4.5-lts.1",
    "marked": "^11.1.1",
    "date-fns": "^3.0.6",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}

